<div class="card">
  <%= link_to image_tag(intro.image, class: :card__img ),intro_path(intro.id)%>
  <div class="card__body">
    <%= link_to intro.book, root_path, class: :card__title %>
    <p class="card__summary">
      <%= intro.review %>
    </p>
    <%= link_to intro.user.name, root_path, class: :card__user %>
  </div>
</div>