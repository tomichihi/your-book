<%= form_with model: intro, local: true do |f|%>
<%= render 'layouts/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :book, "本の名前" %><br />
    <%= f.text_area :book, class: :form__text_1, id:"intro_title" %>
  </div>

  <div class="field">
    <%= f.label :review, "どんな本ですか？" %><br />
    <%= f.text_area :review, class: :form__text_2, id:"intro_catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :genre, "ジャンルを選びましょう" %><br />
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
  </div>

  <div class="field">
    <%= f.label :image, "本の表紙、または本のイメージにあった画像を貼りましょう！ " %><br />
    <%= f.file_field :image, id:"intro_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn %>
  </div>
<% end %>