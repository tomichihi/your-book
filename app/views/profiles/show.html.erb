<main class="main">
  <div class="inner">
    <div class = "profile-wrap"> 
      <div class = "profile-header"> 
       <div class = "profile-header-text">
       プロフィール</div> 
      </div>
    </div>
     
    <div class = "profile-group"> 
      <div class = "profile-wrap"> 
        <div class = "profile"> ユーザー</div>
          <label class = "profile-text"><%=@user.name%></label> 
                                                                                    
      </div>                                             
    </div>

    <div class = "profile-group"> 
      <div class = "profile-wrap"> 
        <div class = "profile"> 趣味</div>
          <label class = "profile-text"><%=@user.profile.hobby%></label> 
                                                                                    
      </div>                                             
    </div>

    <div class = "profile-group"> 
      <div class = "profile-wrap"> 
        <div class = "profile"> 好きな本、映画、音楽など</div>
          <label class = "profile-text"><%=@user.profile.favorite%></label> 
                                                                                    
      </div>                                             
    </div>

    <div class = "profile-group"> 
      <div class = "profile-wrap"> 
        <div class = "profile"> 一言コメント</div>
          <label class = "profile-text"><%=@user.profile.comment%></label> 
                                                                                    
      </div>                                             
    </div>
  
      <div class = 'edit-parent'>
        <%if current_user.id == @profile.user_id %>
          <div><%= link_to '編集する', edit_profile_path(@user.id), class: 'edit-text' %></div>
          <div><%= link_to '戻る', :back, class: 'edit-text' %></div>
            <%else%>
          <div><%= link_to '戻る', :back, class: 'edit-text' %></div>
        <%end%>
      </div>                                      
                                                  
  </div>
</main>
