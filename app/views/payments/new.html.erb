<div class='transaction-contents'>
  <div class='transaction-main'>
      <h1 class='transaction-title-text'>
      決済確認</h1>
    <%# 支払額の表示 %>
  <div class='item-payment'>
     <div class="payment-child">
        <h1 class='item-payment-title'>
        支払金額</h1>
      <p class='item-payment-price'>
        ¥200円(一日ご利用頂けます)</p>
      <p class='item-payment-price'>
        ¥1000円(一ヶ月ご利用頂けます)</p>
      <p class='item-payment-price'>
        ¥5000円(一年間ご利用頂けます)</p>
    </div>
  </div>
    <%# /支払額の表示 %>

    <%= form_with model: @payment, id: 'charge-form', class: 'transaction-form-wrap',local: true do |f| %>
    <%# カード情報の入力 %>
    <div class='credit-card-form'>
        <h1 class='info-input-haedline'>
        クレジットカード情報入力</h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">入力金額</label>
          <span class="indispensable">必須</span></div>
        <%= f.text_field :price,class:"input-default", id:"price", placeholder:"半角", maxlength:"10" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">カード情報</label>
          <span class="indispensable">必須</span></div>
          <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"カード番号(半角英数字16文字)", maxlength:"16" %>
          <div class='available-card'>
          <%= image_tag 'card-visa.gif', class: 'card-logo'%>
          <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
          <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
          <%= image_tag 'card-amex.gif', class: 'card-logo'%></div>
      </div>

      <div class="form-group">
       <div class="group-child">
        <div class='form-text-wrap'>
          <label class="form-text">有効期限</label>
          <span class="indispensable">必須</span></div>
          <div class='input-expiration-date-wrap'>
          <%= f.text_area :exp_month, class:"input-expiration-date", id:"card-exp-month", placeholder:"例)3" %>
          <p>月</p>
          <%= f.text_area :exp_year, class:"input-expiration-date", id:"card-exp-year", placeholder:"例)23" %>
          <p>年</p></div>
       </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">セキュリティコード</label>
          <span class="indispensable">必須</span></div>
        <%= f.text_field :cvc,class:"input-default", id:"card-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %></div>
    </div>
    
    <%# /カード情報の入力 %>
    <div class='buy-btn'>
      <%= f.submit "購入" ,class:"buy-red-btn" %>
    </div>
    <% end %>
    </div>
  </div>
</div>

